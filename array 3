#include<stdio.h>
main()
{
	int a[1000],n,i,min,max,diff;
	scanf("%d",&n);
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
		
	}
	max=min=a[0];
	
for(i=1;i<n;i++)
	{
		if(min>a[i])
		min=a[i];
		if(max<a[i])
		max=a[i];
	}
	printf("max: %d",max);
	printf("min: %d",min);
	diff=max-min;
	printf(" difference: %d",diff);
}
